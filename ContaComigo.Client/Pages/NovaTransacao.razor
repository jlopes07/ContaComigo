@page "/nova-transacao"
@inject HttpClient Http

<h3>Nova Transação</h3>

<div class="mb-3">
    <label>Data:</label>
    <input type="date" @bind="transacao.Data" class="form-control" />
</div>

<div class="mb-3">
    <label>Valor:</label>
    <input type="number" step="0.01" @bind="transacao.Valor" class="form-control" />
</div>

<div class="mb-3">
    <label>Categoria:</label>
    <input type="text" @bind="transacao.Categoria" class="form-control" />
</div>

<div class="mb-3">
    <label>Descrição:</label>
    <input type="text" @bind="transacao.Descricao" class="form-control" />
</div>

<button class="btn btn-primary" @onclick="Enviar">Enviar</button>

@if (mensagem != null)
{
    <p class="mt-3 text-success">@mensagem</p>
}

@code {
    private Transacao transacao = new();
    private string? mensagem;

    private async Task Enviar()
    {
        var response = await Http.PostAsJsonAsync("https://localhost:5001/api/transacoes", transacao);
        if (response.IsSuccessStatusCode)
        {
            mensagem = "Transação registrada com sucesso!";
            transacao = new(); // limpa
        }
        else
        {
            mensagem = "Erro ao registrar.";
        }
    }

    public class Transacao
    {
        public DateTime Data { get; set; } = DateTime.Today;
        public decimal Valor { get; set; }
        public string Categoria { get; set; } = "";
        public string Descricao { get; set; } = "";
    }
}
